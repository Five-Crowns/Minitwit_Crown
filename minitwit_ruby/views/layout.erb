<!doctype html>
<title><% if content_for?(:title) %><%= yield_content :title %><% else %>MiniTwit<% end %> | MiniTwit</title>
<link rel="stylesheet" type="text/css" href="<%= url('/style.css') %>">
<div class="page">
  <h1>MiniTwit</h1>
  <div class="navigation">
    <% if @user %>
      <a href="<%= url('/') %>">my timeline</a> |
      <a href="<%= url('/public') %>">public timeline</a> |
      <a href="<%= url('/logout') %>">sign out [<%= @user['username'] %>]</a>
    <% else %>
      <a href="<%= url('/public') %>">public timeline</a> |
      <a href="<%= url('/register') %>">sign up</a> |
      <a href="<%= url('/login') %>">sign in</a>
    <% end %>
  </div>
  <% if @flashes %>
    <ul class="flashes">
      <% @flashes.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="body">
    <%= yield %>
  </div>
  <div class="footer">
    MiniTwit &mdash; A Sinatra Application
  </div>
</div>