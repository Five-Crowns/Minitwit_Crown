<% content_for :title do %>Sign In<% end %>

<h2>Sign In</h2>
<% if @error %>  <%# Assuming you're passing the error in an instance variable @error %>
  <div class=error><strong>Error:</strong> <%= @error %></div>
<% end %>
<form action="" method="post">
  <dl>
    <dt>Username:</dt>
    <dd><input type="text" name="username" size="30" value="<%= @username %>"></dd> <%# Assuming you're passing the username in @username %>
    <dt>Password:</dt>
    <dd><input type="password" name="password" size="30"></dd>
  </dl>
  <div class=actions><input type="submit" value="Sign In"></div>
</form>