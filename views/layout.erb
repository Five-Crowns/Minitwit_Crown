<!doctype html>
<title><%= yield :title %> | MiniTwit</title>
<link rel=stylesheet type=text/css href="<%= url_for('static', filename='style.css') %>">
<div class=page>
  <h1>MiniTwit</h1>
  <div class=navigation>
    <% if @user %>
      <a href="<%= url_for('timeline') %>">my timeline</a> |
      <a href="<%= url_for('public_timeline') %>">public timeline</a> |
      <a href="<%= url_for('logout') %>">sign out [<%= @user.username %>]</a>
    <% else %>
      <a href="<%= url_for('public_timeline') %>">public timeline</a> |
      <a href="<%= url_for('register') %>">sign up</a> |
      <a href="<%= url_for('login') %>">sign in</a>
    <% end %>
  </div>
  <% if @flashes.any? %>
    <ul class=flashes>
      <% @flashes.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class=body>
    <%= yield %>  <%# This is where the content of the specific page will be inserted %>
  </div>
  <div class=footer>
    MiniTwit &mdash; A Sinatra Application (ERB Version)
  </div>
</div>