<% content_for :title do %>Sign Up<% end %>

<h2>Sign Up</h2>
<% if @error %>  <%# Assuming you're passing the error in @error %>
  <div class=error><strong>Error:</strong> <%= @error %></div>
<% end %>
<form action="" method=post>
  <dl>
    <dt>Username:
    <dd><input type=text name=username size=30 value="<%= @username %>"> <%# Assuming @username holds the value %>
    <dt>E-Mail:
    <dd><input type=text name=email size=30 value="<%= @email %>"> <%# Assuming @email holds the value %>
    <dt>Password:
    <dd><input type=password name=password size=30>
    <dt>Password <small>(repeat)</small>:
    <dd><input type=password name=password2 size=30>
  </dl>
  <div class=actions><input type=submit value="Sign Up"></div>
</form>